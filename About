<script>
document.addEventListener("DOMContentLoaded", function() {
  // Get all the boxes
  const boxes = document.getElementsByClassName("box");

  // Function to randomly show one of the boxes
  function showRandomBox() {
    // Hide all the boxes
    for (let i = 0; i < boxes.length; i++) {
      boxes[i].style.display = "none";
    }

    // Randomly select a box and make it visible
    const randomBox = boxes[Math.floor(Math.random() * boxes.length)];
    randomBox.style.display = "block";

    // Set the box's position to a random spot on the screen
    const windowWidth = window.innerWidth;
    const windowHeight = window.innerHeight;
    const boxWidth = randomBox.offsetWidth;
    const boxHeight = randomBox.offsetHeight;
    const maxLeft = windowWidth - boxWidth;
    const maxTop = windowHeight - boxHeight;
    const randomLeft = Math.floor(Math.random() * maxLeft);
    const randomTop = Math.floor(Math.random() * maxTop);
    randomBox.style.left = randomLeft + "px";
    randomBox.style.top = randomTop + "px";
  }

  // Attach a click event to the close button of each box
  const popupCloses = document.getElementsByClassName("popup-close");
  for (let i = 0; i < popupCloses.length; i++) {
    popupCloses[i].addEventListener("click", function() {
      this.parentElement.style.display = "none";
    });
  }

  // Call the showRandomBox function again after a random interval between 9 and 20 seconds
  setInterval(showRandomBox, Math.floor(Math.random() * 11000) + 9000);
});

</script>

	

